<%- include ('../../partials/header.ejs') %> <%- include
('../../partials/homenavbar.ejs') %>
<body>
    <div class="container">
        <hr />
        <% result.articles.rows.forEach( (article) => { %>
        <div class="card">
            <div class="card-header">
                <h2><%= article.title %></h2>
            </div>
            <div class="card-body">
                <a href="/<%= article.slug %>" class="btn btn-primary"
                    >Ler artigo</a
                >
            </div>
        </div>
        <% }) %>
        <div class="row">
            <div class="col col-12">
                <% if(result.page > 1){ %>
                <a
                    style="float: left"
                    href="/articles/page/<%=result.page -1 %> "
                    >Página Anterior</a
                >
                <%}%> <% if (result.next){ %> <% if (result.page == 0){
                result.page = 1 }%>
                <a
                    style="float: right"
                    href="/articles/page/<%=result.page +1 %> "
                    >Próxima Página</a
                >
                <%}%>
            </div>
        </div>
    </div>
</body>
