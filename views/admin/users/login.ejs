<%- include ('../../partials/header.ejs') %> <%- include
('../../partials/navbar.ejs') %>
<div class="container">
    <hr />
    <div class="card mt-4">
        <div class="card-header">
            <h2>Login de Admin</h2>
        </div>
        <div class="card-body">
            <form action="/authenticate" method="post">
                <input
                    class="form-control mt-2"
                    type="email"
                    name="email"
                    placeholder="Digite seu email"
                />
                <input
                    class="form-control mt-2"
                    type="password"
                    name="password"
                    placeholder="Digite sua senha"
                />
                <button type="submit" class="btn btn-success btn-block mt-2">
                    Logar
                </button>
            </form>
        </div>
    </div>
</div>
